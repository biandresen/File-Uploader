    <main id="home-page" data-page="/" hidden>
      <div class="wrapper">
        <h2>Home</h2>
      </div>
    </main>

    <dialog id="success-modal" class="modal"></dialog>

    <main id="register-page" data-page="/register" hidden>
      <div class="wrapper">
        <section id="register-section">
          <h2>Register</h2>
          <form id="register-form">
            <label data-page="register" for="registerEmail">EMAIL</label>
            <input data-page="register" id="registerEmail" name="registerEmail" type="email" required />

            <label data-page="register" for="registerPassword">PASSWORD</label>
            <input
              data-page="register"
              id="registerPassword"
              name="registerPassword"
              type="password"
              required
            />

            <label data-page="register" for="registerConfirmPassword">CONFIRM PASSWORD</label>
            <input
              data-page="register"
              id="registerConfirmPassword"
              name="registerConfirmPassword"
              type="password"
              required
            />

            <div id="register-error-wrapper" class="error-wrapper" hidden>
              <p class="error-heading">ERRORS:</p>
              <ul id="register-error-list" class="error-list"></ul>
            </div>
            <button id="register-btn" type="submit">REGISTER</button>
          </form>
          <a href="/login">
            <p>Already have an account? Login!</p>
          </a>
        </section>
      </div>
    </main>

    <main id="login-page" data-page="/login" hidden>
