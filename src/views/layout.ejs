            <button id="dashboard-nav-btn" class="icon-btn" type="button">
              <img src="/assets/icons/triangle.svg" alt="folder navigation" />
            </button>
          </div>
          <div id="dashboard-container">
            <nav id="dashboard-nav" class="column-wrapper">
              <div class="row-wrapper">
                <h2>Top Folders</h2>
                <button id="top-folders-nav-btn" class="icon-btn" type="button">
                  <img src="/assets/icons/triangle.svg" alt="folder navigation" />
                </button>
              </div>
              <ul id="top-folder-list" role="list"></ul>
            </nav>
            <section id="dashboard-content" class="column-wrapper">
              <div id="content-orders" class="row-wrapper">
                <div class="row-wrapper">
                  <p>Name</p>
                  <button type="button" class="icon-btn sort-btn">
                    <img src="/assets/icons/arrow.svg" alt="order by name" />
                  </button>
                </div>
                <div class="row-wrapper">
                  <p>Qty</p>
                  <button type="button" class="icon-btn sort-btn">
                    <img src="/assets/icons/arrow.svg" alt="order by quantity" />
                  </button>
                </div>
                <div class="row-wrapper">
                  <p>Created</p>
                  <button type="button" class="icon-btn sort-btn">
                    <img src="/assets/icons/arrow.svg" alt="order by created" />
                  </button>
                </div>
                <div class="row-wrapper">
                  <p>Size</p>
                  <button type="button" class="icon-btn sort-btn">
                    <img src="/assets/icons/arrow.svg" alt="order by file size" />
                  </button>
                </div>
              </div>
              <div class="column-wrapper">
                <ul role="list" id="content-list" class="column-wrapper"></ul>
              </div>
            </section>
          </div>
        </section>
      </div>
    </main>

    <main id="register-page" data-page="/register" hidden>
      <div class="wrapper">
        <section id="register-section">
          <h2>Register</h2>
          <form id="register-form">
            <label data-page="register" for="registerEmail">EMAIL</label>
            <input data-page="register" id="registerEmail" name="registerEmail" type="email" required />

            <label data-page="register" for="registerPassword">PASSWORD</label>
            <input
              data-page="register"
              id="registerPassword"
              name="registerPassword"
              type="password"
              required
            />

            <label data-page="register" for="registerConfirmPassword">CONFIRM PASSWORD</label>
            <input
              data-page="register"
              id="registerConfirmPassword"
              name="registerConfirmPassword"
              type="password"
              required
            />

            <div id="register-error-wrapper" class="error-wrapper" hidden>
              <p class="error-heading">ERRORS:</p>
              <ul id="register-error-list" class="error-list"></ul>
            </div>
            <button id="register-btn" type="submit">REGISTER</button>
          </form>
          <a data-link="page" href="/login">
            <p>Already have an account? Login!</p>
          </a>
        </section>
      </div>
    </main>

    <main id="login-page" data-page="/login" hidden>
      <div class="wrapper">
        <section id="login-section">
          <h2>Login</h2>
          <form id="login-form">
            <label data-page="login" for="loginEmail">EMAIL</label>
            <input data-page="login" id="loginEmail" name="loginEmail" type="email" required />

            <label data-page="login" for="loginPassword">PASSWORD</label>
            <input data-page="login" id="loginPassword" name="loginPassword" type="password" required />

            <div id="login-error-wrapper" class="error-wrapper" hidden>
              <p class="error-heading">ERRORS:</p>
              <ul id="login-error-list" class="error-list"></ul>
            </div>
            <button id="login-btn" type="submit">LOGIN</button>
          </form>
          <a data-link="page" href="/register">
            <p>Already have an account? Register!</p>
          </a>
        </section>
      </div>
    </main>

